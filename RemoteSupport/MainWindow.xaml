<Window x:Class="RemoteSupport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteSupport"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1100">
    <Grid>
        <Button x:Name="button" Content="Screen Shot" HorizontalAlignment="Left" Margin="520,494,0,0" VerticalAlignment="Top" Width="75" Click="GetScreenShoot"/>
        <Image x:Name="ScreenShot" HorizontalAlignment="Left" Height="425" Margin="160,10,0,0" VerticalAlignment="Top" Width="800" RenderTransformOrigin="-0.217,0.226" />
    </Grid>
</Window>
